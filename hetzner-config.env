# =====================================================
# Hetzner Server Configuration for LegalTracking RAG System
# =====================================================
# Server Details from your Hetzner Cloud Console
# Created: Ashburn, VA (us-east)
# =====================================================

# Server Information
SERVER_NAME="LegalTracking-Rag-System"
SERVER_TYPE="ccx13"  # 2 vCPU, 8GB RAM, 80GB local disk
SERVER_LOCATION="ash"  # Ashburn, VA
SERVER_DATACENTER="ash-dc1"
SERVER_NETWORK_ZONE="us-east"

# Server Resources
SERVER_VCPU="2"
SERVER_RAM="8GB"
SERVER_DISK="80GB"
SERVER_VOLUME_SIZE="250GB"  # Attached volume
SERVER_TRAFFIC_LIMIT="1TB"

# Server IPs (Actual values from your Hetzner server)
SERVER_IPV4="5.161.120.86"
SERVER_IPV6="2a01:4ff:f0:69ab::/64"

# Volume Configuration
VOLUME_NAME="legaltracking-data"
VOLUME_SIZE="250"  # GB
VOLUME_MOUNT_POINT="/mnt/data"
VOLUME_DEVICE="/dev/disk/by-id/scsi-0HC_Volume_YOUR_VOLUME_ID"  # Update with actual volume ID

# Application Configuration
APP_NAME="legal-rag-mexico"
APP_PORT="80"
APP_DOMAIN="legaltracking-rag.com"  # Update with your actual domain

# Pricing Information
SERVER_MONTHLY_COST="14.49"  # USD per month
SERVER_HOURLY_COST="0.0217"  # USD per hour

# Backup Configuration
ENABLE_BACKUPS="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="7"

# Security Configuration
SSH_PORT="22"
FIREWALL_ENABLED="true"
FAIL2BAN_ENABLED="true"

# Monitoring
ENABLE_MONITORING="true"
GRAFANA_PORT="3000"
PROMETHEUS_PORT="9090"

# Docker Configuration
DOCKER_DATA_ROOT="/mnt/data/docker"  # Store Docker data on the volume
DOCKER_LOG_MAX_SIZE="10m"
DOCKER_LOG_MAX_FILE="5"

# Database Storage (on volume)
POSTGRES_DATA_DIR="/mnt/data/postgres"
REDIS_DATA_DIR="/mnt/data/redis"
MILVUS_DATA_DIR="/mnt/data/milvus"

# Application Data Directories
APP_DATA_DIR="/mnt/data/app"
APP_UPLOADS_DIR="/mnt/data/uploads"
APP_BACKUPS_DIR="/mnt/data/backups"
APP_LOGS_DIR="/mnt/data/logs"

# SSL Configuration
SSL_EMAIL="admin@legaltracking.com"
SSL_STAGING="false"  # Set to true for testing

# Performance Tuning
MAX_CONNECTIONS="1000"
WORKER_PROCESSES="auto"
WORKER_CONNECTIONS="2048"

# Swap Configuration (helpful for 8GB RAM)
SWAP_SIZE="4G"
SWAPPINESS="10"